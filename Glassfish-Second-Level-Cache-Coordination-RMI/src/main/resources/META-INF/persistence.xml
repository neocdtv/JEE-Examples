<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="cachedCoordinationUnit" transaction-type="JTA">
    <jta-data-source>jdbc/cacheCordinationResource</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <!--
            working cache coordination configuration, but eclipselink.cache.coordination.rmi.url must be configured on every
            cluster instance separately in cluster-config->systemproperties:
            {default value: rmi://localhost:8686/, instance1: rmi://t430:port1/, instance2: rmi://dev2:port2/}
            after creation of a server instance you will be prompted with ports assigned to the new instance, 
            use port JMX_SYSTEM_CONNECTOR_PORT for port1 for the first instance and port2 for the second instance
            -->

<!--
      <property name="eclipselink.cache.coordination.rmi.url" value="rmi://t430:28686" />
      -->
      <property name="eclipselink.cache.coordination.protocol" value="rmi"/>
      <property name="eclipselink.cache.coordination.naming-service" value="rmi"/>
      <property name="eclipselink.cache.coordination.channel" value="cacheCoordinationChannel"/>

      <!--
            <property name="eclipselink.cache.coordination.rmi.multicast-group" value="228.9.3.1" />
            <property name="eclipselink.cache.coordination.rmi.multicast-group.port" value="2048" />
            <property name="eclipselink.cache.coordination.rmi.url" value="rmi://t430:8686/" />
            -->

      <property name="eclipselink.logging.session" value="true"/>
      <property name="eclipselink.logging.thread" value="true"/>
      <property name="eclipselink.logging.exceptions" value="true"/>
      <property name="eclipselink.logging.level" value="ALL"/>
      <!-- L2 Cache -->
      <property name="eclipselink.cache.shared.default" value="true"/>
      <property name="eclipselink.cache.type.default" value="Full"/>
      <property name="eclipselink.cache.size.default" value="100"/>
      <property name="eclipselink.cache.shared" value="true"/>
      <property name="eclipselink.target-database" value="Oracle"/>
      <!-- DDL Creation -->
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.create-ddl-jdbc-file-name" value="ddl-create.jdbc"/>
      <property name="eclipselink.drop-ddl-jdbc-file-name" value="ddl-drop.jdbc"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
      <property name="eclipselink.ddlgen-terminate-statements" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
